{
  "name": "blazin-backend",
  "version": "1.0.0",
  "main": "src/index.js",
  "author": "Alican Demirtas",
  "license": "MIT",
  "scripts": {
    "start:dev": "./node_modules/.bin/nodemon src/index.js --exec node_modules/.bin/babel-node -e js",
    "test": "jest --testEnvironment=node --watchAll",
    "start-db": "mongod --dbpath db",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "./node_modules/.bin/babel -d ./build ./src -s",
    "build": "npm run clean && yarn build-babel",
    "start": "npm run build && node ./build/index.js",
    "heroku-postbuild": "npm run build"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-stage-0": "^7.8.3",
    "chai": "^4.2.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "mocha": "^8.2.1",
    "mockingoose": "^2.13.2",
    "supertest": "^6.0.1"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.8.1",
    "mongoose": "^5.11.7",
    "nodemon": "^2.0.6"
  }
}
